        }

        function GetAssetList(pNo) {
            $.ajax({
                url: '../AssetMaintainContracts/GetContractAssetList',
                type: "GET",
                data: { purchaseNo: pNo },
                success: function (data) {
                    $("#pnlASSETLIST").html(data);
                    CountCost();
                    CountQty();
                },
                error: function (msg) {
                    alert(msg);
                }
            });
        }

        function CountCost() {
            var totalCost = 0;
            $("#pnlASSETLIST table tbody td:nth-child(7)").each(function () {
                var cost = $.trim($(this).text());
                totalCost += (cost * 1);
                $("#UniteCost").val(totalCost);
                $("#UniteCost").trigger("change");
            });
        }

        function CountQty() {
            var totalQty = 0;
            $("#pnlASSETLIST table tbody td:nth-child(6)").each(function () {
                var qty = $.trim($(this).text());
                totalQty += (qty * 1);
                $("#Qty").val(totalQty);
                $("#Qty").trigger("change");
            });
        }

        // 取小數點計算四捨五入
        // num:參數   pos:取到小數點第幾位
        function formatFloat(num, pos) {
            var size = Math.pow(10, pos);
            return Math.round(num * size) / size;
        }
