                });
            });
            $("#PurchaseNo").change(function () {
                var keynam = $(this).val();
                if (keynam !== "") {
                    $.ajax({
                        url: '../AssetMaintainContracts/CheckPNo',
                        type: "GET",
                        dataType: "json",
                        data: { id: keynam },
                        success: function (data) {
                            $("#CheckPNoResult").html(data.data);
                            if (!data.success) {
                                $("#AttainDIV").hide();
                            }
                            else {
