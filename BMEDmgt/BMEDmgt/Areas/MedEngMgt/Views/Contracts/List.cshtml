@model IEnumerable<BMEDmgt.Areas.MedEngMgt.Models.Contract>

@{
    ViewBag.Title = "列表/合約";
}

<h2>合約列表</h2>

<p>
    @Html.ActionLink("新增", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ContractNo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ContractName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Sdate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Edate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cost)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.VendorId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EngId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ContractNo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ContractName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Sdate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Edate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cost)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.VendorName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EngName)
        </td>
        <td>
                @Html.Raw(item.Status == "Y" ? "正常" : "終止")

        </td>
        <td>
            @Html.ActionLink("修改", "Edit", new { id=item.ContractNo }) |
            @Html.ActionLink("刪除", "Delete", new { id = item.ContractNo }) <br/>
            @Html.ActionLink("寄發問卷", "Send", "QuestSend",new { id = item.ContractNo }, null)
        </td>
    </tr>
}

</table>
