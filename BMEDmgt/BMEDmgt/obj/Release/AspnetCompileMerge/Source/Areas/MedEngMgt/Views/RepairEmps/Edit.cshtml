@model BMEDmgt.Areas.MedEngMgt.Models.RepairEmp

<script src="~/Areas/MedEngMgt/Scripts/RepairEmp.js"></script>

@using (Ajax.BeginForm("Edit", "RepairEmps", new AjaxOptions
{
    HttpMethod = "POST",
    LoadingElementId = "imgLOADING4",
    UpdateTargetId = "repairemp",
    OnSuccess = ""
}))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>維修工程師</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.DocId)

        <div class="form-group">
            @Html.LabelFor(model => model.UserName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.UserId, null, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.UserId, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Hour, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Hour, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Hour, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Minute, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Minute, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Minute, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="儲存" class="btn btn-default" />
                <img id="imgLOADING4" src="~/Images/opc-ajax-loader.gif" style="display: none" />
            </div>
        </div>
    </div>
}

<div id="pnlREPEMPLIST">
    @if (Model != null)
    {
        @Html.Action("List", "RepairEmps", new { id = Model.DocId })
    }
</div>
