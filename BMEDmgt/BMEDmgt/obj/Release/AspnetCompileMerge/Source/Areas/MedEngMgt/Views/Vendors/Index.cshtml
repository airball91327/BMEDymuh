@model IEnumerable<BMEDmgt.Areas.MedEngMgt.Models.Vendor>

@{
    ViewBag.Title = "廠商列表";
}

<script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>

<h2>廠商列表</h2>

@using (Ajax.BeginForm("Index", "Vendors",
                                        new AjaxOptions
                                        {
                                            HttpMethod = "POST",
                                            UpdateTargetId = "pnlVENDORLIST",
                                            LoadingElementId = "imgLOADING"
                                        }, new { @class = "form-horizontal" }))
{ 
    <div class="form-group">
        <div class="form-inline">
            @Html.Label("qtyNAME", "關鍵字", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-2">
                @Html.TextBox("qtyNAME", "", new { @class = "form-control" })
            </div>
            @Html.Label("qtyUNITENO", "統一編號", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-2">
                @Html.TextBox("qtyUNITENO", "", new { @class = "form-control" })
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input id="btnQTY" type="submit" value="查詢" class="btn btn-default" />
            <img id="imgLOADING" src="~/Images/opc-ajax-loader.gif" style="display: none" />
        </div>
    </div>

}

<div id="pnlVENDORLIST">
    @Html.Action("List")
</div>
