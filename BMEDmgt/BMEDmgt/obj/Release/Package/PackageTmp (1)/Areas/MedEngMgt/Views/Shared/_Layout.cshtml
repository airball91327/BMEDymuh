<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - 醫療設備管理系統</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/menu/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    <script src="~/Scripts/jquery-migrate-3.0.0.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">

            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <img style="padding:5px 15px 5px 0px" src="~/Images/logo.png" />

            </div>
            <div class="navbar-collapse collapse">
                @Html.ActionLink("醫療設備管理系統", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("首頁", "Index", "Home")</li>
                    <li>@Html.ActionLink("關於", "About", "Home")</li>
                    <li>@Html.ActionLink("連絡方式", "Contact", "Home")</li>
                    @Html.Partial("_LoginPartial")
                </ul>
            </div>
        </div>
    </div>
    @if (User.Identity.IsAuthenticated)
    {
        <div id="menu">
            <nav id="nav" class="ry">
                <ul id="main-menu">
                    <li>
                        @Html.ActionLink("首頁", "Index", "Home")
                    </li>
                    <li>
                        <a href="#">申請表單</a>
                        <ul class="submenu">
                            @*@if (!Roles.IsUserInRole("Admin"))
                            {
                                <li>@Html.ActionLink("請修", "Create", "Repairs")</li>
                            }*@

                            @*<li>@Html.ActionLink("採購", "Create", "BuyEvaluate")</li>*@
                            @Html.Action("GetFuncs", "Funcs", new { module = "申請表單" })
                        </ul>
                    </li>
                    <li>
                        <a href="#">醫療儀器</a>
                        <ul class="submenu">
                            @*@if (Roles.IsUserInRole("Admin"))
                            {
                                <li>@Html.ActionLink("資產維護", "Index", "Assets")</li>
                                <li>@Html.ActionLink("手冊維護", "Index", "Manuals")</li>
                                <li>@Html.ActionLink("庫存管理", "Index", "DeptStoks")</li>
                                <li>@Html.ActionLink("保養格式維護", "Index", "KeepFormats")</li>
                            }
                            <li>@Html.ActionLink("標籤維護", "Index", "Labels")</li>*@
                            @Html.Action("GetFuncs", "Funcs", new { module= "醫療儀器" })
                        </ul>
                    </li>
                    <li>
                        <a href="#">財務</a>
                        <ul class="submenu">
                            @*<li>@Html.ActionLink("發票作業", "Index", "Tickets")</li>*@
                            @Html.Action("GetFuncs", "Funcs", new { module = "財務" })
                        </ul>
                    </li>
                    <li>
                        <a href="#">統計報表</a>
                        <ul class="submenu">
                            @Html.Action("GetFuncs", "Funcs", new { module = "統計報表" })
                        </ul>
                    </li>
                    <li>
                        <a href="#">查詢</a>
                        <ul class="submenu">
                            @Html.Action("GetFuncs", "Funcs", new { module = "查詢" })
                        </ul>
                    </li>
                    <li>
                        <a href="#">管理</a>
                        <ul class="submenu">                        
                            @Html.Action("GetFuncs", "Funcs", new { module = "管理" })
                            @if (Roles.IsUserInRole("Admin"))
                            {
                                <li>@Html.ActionLink("功能權限設定", "RoleWithFuncs", "Funcs")</li>
                            }
                        </ul>
                    </li>
                </ul>
            </nav>
        </div>
    }
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - 國立成功大學醫學院附設醫院 部門：工務室　組別：儀器組</p>
            <p>電話：06-2353535 ext. 4616　傳真：06-2766157</p>
            <p>地址：704 台南市北區勝利路138號</p>
        </footer>
    </div>

    @Scripts.Render("~/Scripts/menu.js")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
