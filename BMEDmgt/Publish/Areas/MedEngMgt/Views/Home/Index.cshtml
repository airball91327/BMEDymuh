@model BMEDmgt.Areas.MedEngMgt.Models.UnsignCounts
@{
    ViewBag.Title = "簽核列表";
}
<link href="~/Content/bootstrap-combobox.css" rel="stylesheet" />
<script src="~/Scripts/bootstrap-combobox.js"></script>
<h4>最新消息</h4>

<div>
    @Html.Action("ShowNews", "News")
</div>

<h4>簽核列表</h4>

<ul class="nav nav-tabs">
    <li class="active"><a data-toggle="tab" href="#home">請修 <span class="badge">@Model.RepairCount</span></a></li>
    <li><a data-toggle="tab" href="#menu1">保養 <span class="badge">@Model.KeepCount</span></a></li>
    <li><a data-toggle="tab" href="#menu2">採購 <span class="badge">@Model.BuyEvalateCount</span></a></li>
    <li><a data-toggle="tab" href="#menu3">驗收 <span class="badge">@Model.DeliveryCount</span></a></li>
</ul>

<div class="tab-content">
    <div id="home" class="tab-pane fade in active">
        <h4>維修</h4>
        <p>@Html.Action("Index", "Repairs")</p>
    </div>
    <div id="menu1" class="tab-pane fade">
        <h4>保養</h4>
        <p>@Html.Action("Index", "Keeps")</p>
    </div>
    <div id="menu2" class="tab-pane fade">
        <h3>採購</h3>
        <p>選配功能</p>
    </div>
    <div id="menu3" class="tab-pane fade">
        <h3>驗收</h3>
        <p>選配功能</p>
    </div>
</div>

@section Scripts{
    <script type="text/javascript">
        $(document).ready(function () {
            $('.combobox').combobox();
        });
    </script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
}

