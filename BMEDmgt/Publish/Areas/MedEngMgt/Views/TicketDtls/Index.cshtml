@model IEnumerable<BMEDmgt.Areas.MedEngMgt.Models.TicketDtl>

@{
    ViewBag.Title = "Index";
}
<h2>明細列表</h2>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ObjName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Qty)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Unite)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cost)
        </th>
        <th></th>
    </tr>
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ObjName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Qty)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Unite)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cost)
        </td>
        <td>
            @Html.ActionLink("編輯", "Edit", new { id = item.TicketDtlNo, seq = item.SeqNo }) |
            @Html.ActionLink("預覽", "Details", new { id = item.TicketDtlNo, seq = item.SeqNo })
        </td>
    </tr>
}
    <tr>
        <td colspan="4"></td>
        <td style="color: blue">@ViewData["Total"]</td>
        <td></td>
    </tr>
</table>
